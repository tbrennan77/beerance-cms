<h2>Log in</h2>

<div class="row">
<div class="large-3"></div>
<div class="large-6">
<%= form_tag sessions_path do %>  
  <p>  
    <%= label_tag :email %><br />  
    <%= email_field_tag :email, params[:email], class: 'required' %>  
  </p>  
  <p>  
    <%= label_tag :password %><br />  
    <%= password_field_tag :password, nil, class: 'required' %>  
  </p>  
  <p><%= submit_tag "Log in", class: 'button nice radius' %></p>  
<% end %>
</div>
<div class="large-3"></div>
</div>
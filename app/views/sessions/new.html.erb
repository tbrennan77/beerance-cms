<h3>Log in</h3>
<h4 class="subheader">Start your clearance!</h4>
<hr />

<fieldset>
<%= form_tag sessions_path do %>  
  <p>  
    <%= label_tag :email %><br />  
    <%= text_field_tag :email, params[:email], class: 'required' %>  
  </p>  
  <p>  
    <%= label_tag :password %><br />  
    <%= password_field_tag :password, nil, class: 'required' %>  
  </p>  
  <p><%= submit_tag "Log in", class: 'button nice radius' %></p>  
<% end %>  
</fieldset>
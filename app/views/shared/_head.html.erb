  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700|Roboto+Slab:400,300,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag "application" %>
  
  <!-- Included JS Files  -->
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "application" %>  
  
  <!-- External JS Files  -->
  <script src="https://js.stripe.com/v1/"></script>
  <script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
</head>

<head>
  <meta charset="utf-8" />
  
  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
  
  <!-- Smart App Banner -->
  <meta name="apple-itunes-app" content="app-id=493136154">
  
  <link href="touch-icon-iphone.png" rel="apple-touch-icon" />
  <link href="touch-icon-ipad.png" rel="apple-touch-icon" sizes="72x72" />
  <link href="touch-icon-iphone4.png" rel="apple-touch-icon" sizes="114x114" />
  <link href="touch-icon-ipad3.png" rel="apple-touch-icon" sizes="144x144" />

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width" />  
  <title><%= yield(:title) %>BeeranceSpecial.com</title>
  
  <!-- Included CSS Files -->
  <%= stylesheet_link_tag "application" %>
  
  <!-- Included JS Files  -->
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700|Roboto+Slab:400,300,700' rel='stylesheet' type='text/css'>

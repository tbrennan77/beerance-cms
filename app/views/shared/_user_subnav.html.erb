<script>
$('.subnav a').live('click', function(e) {  
  $('.ajax-container').fadeOut()
  $('.subnav a').each( function() {
    $(this).removeClass('current');
    $(this).removeClass('active');
    $(this).removeAttr('disabled');
  });
  $(this).addClass('current');  
})
</script>

<style>
.subnav {
  background: rgb(43, 13, 7);
  color: white;
  padding: 20px;
}
.subnav a { 
  color: white;
  padding: 8px 20px;
  border-radius: 8px;
  margin-right: 28px;
}
.subnav a.current, .subnav a:hover { 
  background-color: rgb(122, 66, 37);
  -webkit-transition: background-color .25s ease-in-out;
  transition: background-color .25s ease-in-out;
}

.subnav.show-for-small a {
  margin-right: 0;
  color: white;
}
.subnav.show-for-small a.current {
  color: white !important;
}
</style>
<div class='subnav hide-for-small'>
  <div class='row'>
    <div class="large-12 columns">
      <% if current_user.bars.count > 0 %>
      <%= link_to "Current Specials", current_specials_path, class: 'current', data: {remote: true} %>
      <%= link_to "Archive", archived_specials_path, data: {remote: true} %>
      <%= link_to "My Bars", bar_list_path, data: {remote: true} %>
      <% else %>
      <%= link_to "My Bars", bar_list_path, class: 'current', data: {remote: true} %>
      <% end %>
      <%= link_to "Account Details", account_path, data: {remote: true} %>
    </div>
  </div>
</div>

<div class='subnav show-for-small'>
  <ul class="side-nav">
    <li class="active"><%= link_to "Current Specials", current_specials_path, class: 'current', data: {remote: true} %></li>
    <li><%= link_to "Archive", archived_specials_path, data: {remote: true} %></li>
    <li><%= link_to "My Bars", bar_list_path, data: {remote: true} %></li>
    <li><%= link_to "Account Details", account_path, data: {remote: true} %></li>
  </ul>
</div>
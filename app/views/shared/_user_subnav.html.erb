<script>
$('#subnav a').live('click', function() {
  $('#subnav a').each( function() {
    $(this).removeClass('current');
  });
  $(this).addClass('current');
})
</script>

<style>
#subnav {
  background: rgb(43, 13, 7);
  color: white;
  padding: 20px;
}
#subnav a { 
  color: white;
  padding: 8px 20px;
  border-radius: 8px;
  margin-right: 28px;
}
#subnav a.current, #subnav a:hover { 
  background-color: rgb(122, 66, 37);
  -webkit-transition: background-color .25s ease-in-out;
  transition: background-color .25s ease-in-out;
}
</style>
<div id="subnav">
  <div class='row'>
    <div class="large-12 columns">
      <%= link_to "Current Specials", current_specials_path, class: 'current', data: {remote: true} %>
      <%= link_to "Archive", archived_specials_path, data: {remote: true} %>
      <%= link_to "My Bars", bar_list_path, data: {remote: true} %>
      <%= link_to "Account Details", account_path, data: {remote: true} %>
    </div>
  </div>
</div>
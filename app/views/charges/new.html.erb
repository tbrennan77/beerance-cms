<style>
  div {text-align: center;}
</style>
<div class="row">
  <div class="large-4 columns">
    <%= form_tag charges_path, class: 'panel' do %>
      <%= hidden_field_tag "plan_type", 1 %>
      <article>
        <label class="amount">
          <h5>1 Month</h5>
          <%= image_tag "beer_icon_02.jpg" %><br />
          <span>Amount: $5.00</span>
        </label>
      </article>

      <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="A month's subscription"
              data-amount="500"></script>
    <% end %>
  </div>
  <div class="large-4 columns">
    <%= form_tag charges_path, class: 'panel' do %>
      <%= hidden_field_tag "plan_type", 2 %>
      <article>
        <label class="amount">
          <h5>6 Months</h5>
          <%= image_tag "beer_icon_03.jpg" %><br />
          <span>Amount: $15.00</span>
        </label>
      </article>
      <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="6 month's subscription"
              data-amount="1500"></script>
    <% end %>
  </div>
  <div class="large-4 columns">
    <%= form_tag charges_path, class: 'panel' do %>
      <%= hidden_field_tag "plan_type", 3 %>
      <article>
        <label class="amount">
          <h5>1 Year</h5>
          <%= image_tag "beer_icon_04.jpg" %><br />
          <span>Amount: $30.00</span>
        </label>
      </article>
      <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="A year's subscription"
              data-amount="3000"></script>
    <% end %>
  </div>
</div>
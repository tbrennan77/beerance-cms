<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <style>input {display:inline-block !important;}</style><![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <style>input {display:inline-block !important;}</style><![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <style>input {display:inline-block !important;}</style><![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />
  
  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
  
  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width" />  
  <title>BeeranceApp.com</title>
  
  <!-- Included CSS Files -->
  <%= stylesheet_link_tag    "application" %>
  
  <!-- Included JS Files  -->
  <%= javascript_include_tag "https://js.stripe.com/v1/", "application" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <link href='http://fonts.googleapis.com/css?family=Domine:400,700' rel='stylesheet' type='text/css'>
</head>
  <body>
    <% if flash[:notice] %>
      <div class='alert-box notice'><%= flash[:notice] %></div>
    <% end %>
    <div id="ajax_bar"><%= image_tag "ajax-loader.gif" %><br /><br />loading...</div>
    
    <div class="contact hide">
      <div class='row'>
          <%= form_tag sessions_path do %>  
            <div class='large-3 columns'>
              <%= label_tag :name %>
              <%= text_field_tag :name, nil, class: 'input-text required' %>
              <%= label_tag :email %>
              <%= email_field_tag :email, params[:email], class: 'input-text required' %>
            </div>
            <div class='large-4 columns'>
              <%= label_tag :message %>
              <%= text_area_tag :message, nil, rows: 5, class: 'required', style: 'height:auto' %>
            </div>
            <div class='large-2 columns'>
              <br />
              <br />
              <%= submit_tag "Submit", class: 'blue button nice radius' %>
            </div>
            <div class='large-3 columns' style='font-size: 14px;'>
              <h6>Contact Info:</h6>
              <p>
                lorem impos kdfjlkj odsifjdsiojf dsiofjiod siodfjdiso ifdojdsfijds.
              </p>
            </div>
        <% end %>  
      </div>
    </div>
    <div class="login hide">
      <div class='row'>
          <%= form_tag sessions_path do %>  
            <div class='large-3 columns'>
              <%= label_tag :email %>
              <%= email_field_tag :email, params[:email], class: 'required' %>
            </div>
            <div class='large-3 columns'>
              <%= label_tag :password %>
              <%= password_field_tag :password, nil, class: 'required' %>
            </div>
            <div class='large-3 columns'>
              <br />
              <%= submit_tag "Login", class: 'blue button nice radius' %>
            </div>
            <div class='large-3 columns' style='margin-top: 25px'>
              <%= link_to "Register", sign_up_path, class: 'right' %>
            </div>
        <% end %>  
      </div>
    </div>

    <nav class="top-bar">
      <ul class="title-area">
        <!-- Title Area -->
        <li class="name">
          <h1><%= link_to image_tag("title.png"), root_path %></h1>
        </li>
        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon"><a href="#" class="menu-trigger"><span>Menu</span></a></li>
      </ul>
      <section class="top-bar-section" id="menu">
       <% if current_user %>  
         <ul class="right">
            <li class="divider show-for-medium-and-up"></li>
            <li><%= link_to "Log out", log_out_path %></li>
        </ul>
        <% if current_user.admin? %>
          <ul class="right">
            <li class="divider show-for-medium-and-up"></li>
            <li><%= link_to "Admin Portal", admin_path %></li>
          </ul>
        <% end %>
          <ul class="right">
            <li class="divider show-for-medium-and-up"></li>
            <li>
              <%= link_to "#{current_user.username}", profile_path %>  
            </li>
          </ul>
        <% else %>
          <ul class="right">
            <li class="divider show-for-medium-and-up"></li>
            <li>
            <%= link_to "Log In", "javascript:void(0)", id: 'login', title: "Log In" %>
            </li>
          </ul>
          <ul class="right">
            <li class="divider show-for-medium-and-up"></li>
            <li>
            <%= link_to "Contact", "javascript:void(0)", id: 'contact', title: "Contact" %>
            </li>
          </ul>
        <% end %> 
        </section>
    </nav>


    <div class="row">      
      <div class="large-12 columns">
          <br />
        <% if flash[:error] %>
          <div data-alert class='alert-box alert'>
            <%= flash[:error] %>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>

    <footer id="footermain" class="container">
      <%= link_to "Legal Notice", legal_path %> |
      <%= link_to "Terms of Service", tos_path %> |
      <%= link_to "Privacy", privacy_path %> |
      <%= link_to "About", about_path %> |
      <%= link_to "Support", support_path %>
    </footer>
  </body>
</html>
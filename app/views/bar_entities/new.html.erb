<style>
.hour-label {text-align: right; font-weight: bold;}
.large-3 {
  height: 46px;
  padding-top: 7px !important;
}
</style>
<h3>Add a new bar</h3>
<h4 class="subheader">Fill out the form below</h4>
<hr />

<fieldset>
<%= form_for @bar_entity do |f| %>  
  <% if @bar_entity.errors.any? %>  
    <div class="error_messages">  
      <h2>Form is invalid</h2>  
      <ul>  
        <% for message in @bar_entity.errors.full_messages %>  
          <li><%= message %></li>  
        <% end %>  
      </ul>  
    </div>  
  <% end %>  
    
    <div class="row">
      <div class='large-6 columns'>
        <h5>Bar Information</h5>
        <hr />

        <%= f.label :bar_name %> 
        <%= f.text_field :bar_name %>  
    
        <%= f.label :bar_phone %>
        <%= f.phone_field :bar_phone %>  
    
        <%= f.label :bar_url, "Website URL" %>
        <%= f.text_field :bar_url, value: 'http://' %>  
        
        <%= f.label :bar_addr1 %>
        <%= f.text_field :bar_addr1 %>  
    
        <%= f.label :bar_addr2 %>
        <%= f.text_field :bar_addr2 %>  
        
        <div class='row'>
          <div class='large-8 columns'>
            <%= f.label :bar_city %>
            <%= f.text_field :bar_city %>  
          </div>
          <div class='large-4 columns'>
            <%= f.label :bar_state %>
            <%= f.select :bar_state, states.map {|s| s} %>  
          </div>
        </div>
        <br />
        <%= f.label :bar_zip %>
        <%= f.text_field :bar_zip %>
      </div>
      <div class='large-6 columns'>
        <h5>Hours</h5>
        <hr />
        <br />
        <div class="row">
          <div class='large-3 columns hour-label'>
            Monday
          </div>
          <div class='large-9 columns'>
            <%= f.text_field :hours_mon, placeholder: '11am - 12pm' %>  
          </div>
        </div>
        <div class="row">
          <div class='large-3 columns hour-label'>
            Tuesday
          </div>
          <div class='large-9 columns'>
            <%= f.text_field :hours_tues, placeholder: '11am - 12pm' %>  
          </div>
        </div>
        <div class="row">
          <div class='large-3 columns hour-label'>
            Wednesday
          </div>
          <div class='large-9 columns'>
            <%= f.text_field :hours_wed, placeholder: '11am - 12pm' %>  
          </div>
        </div>
        <div class="row">
          <div class='large-3 columns hour-label'>
            Thursday
          </div>
          <div class='large-9 columns'>
            <%= f.text_field :hours_thur, placeholder: '11am - 12pm' %>  
          </div>
        </div>
        <div class="row">
          <div class='large-3 columns hour-label'>
            Friday
          </div>
          <div class='large-9 columns'>
            <%= f.text_field :hours_fri, placeholder: '11am - 12pm' %>  
          </div>
        </div>
        <div class="row">
          <div class='large-3 columns hour-label'>
            Saturday
          </div>
          <div class='large-9 columns'>
            <%= f.text_field :hours_sat, placeholder: '11am - 12pm' %>  
          </div>
        </div>
        <div class="row">
          <div class='large-3 columns hour-label'>
            Sunday
          </div>
          <div class='large-9 columns'>
            <%= f.text_field :hours_sun, placeholder: '11am - 12pm' %>  
          </div>
        </div>
      </div>
    </div>
    <hr />
  <%= f.submit "Add Bar", class: 'button nice radius success' %>  <%= link_to "Cancel", profile_path, class: 'alert button nice radius' %>
<% end %>  
</fieldset>
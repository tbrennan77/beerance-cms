<div class="large-6 columns">
  <div class='ajax-container'>
    <h3>Reset Password</h3>
    <h5 class="subheader">Enter your email address to reset your password.</h5>
    <div class=" plain">
      <%= form_tag password_resets_path, method: :post do |f| %>
        <div class="form-field">
          <%= email_field_tag :email, params[:email], placeholder: "email@example.com", required: '' %>
        </div>
        <div class="actions">
          <%= submit_tag "Send Password Reset Email", class: "button small " %>
        </div>
      <% end %>
    </div>
    </div>          
  </div>
<% title "Account Details - " %>

<div class='large-12 columns'>
  <div class="row">
      <div class="large-12 columns">
          <div class='ajax-container'>
              <div class="row heading">
                <div class="large-9 columns">
                  <%= image_tag "beerance_kegicon.png" %><h2><%= current_user.owner_name %>'s Account</h2>
                </div>
              </div>

              <div class='row'>  
                  <div class="large-12 columns user_info">
                      <h2>Info</h2>
                      <span><b>Name:</b> <%= current_user.owner_name %></span>
                      <span><b>Email:</b> <%= current_user.username %></span>
                      <span><b>Phone:</b> <%= number_to_phone current_user.phone, area_code: true %></span>
                      <span><%= link_to "Change Account Information", edit_user_path(current_user) %></span>
                      <span><%= link_to "Change Password", new_password_reset_path %></span>
                  </div>
              </div>
              <div class='row'>  
                <div class="large-12 columns">
                      <h2>Statistics</h2>
                      <ul>
                        <li>You manage <%= pluralize current_user.bars.count, 'bar' %></li>
                        <li>You've posted <%= pluralize current_user.specials.count, 'Beerance', 'Beerances' %></li>
                        <li>Member Since: <%= current_user.createdAt.to_date.strftime("%-m/%-d/%Y") %></li>
                      </ul>
                  </div>
              </div>
              
            </div>          
        </div>
    </div>
</div>

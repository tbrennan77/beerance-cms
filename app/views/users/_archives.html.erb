<div class="row heading">
  <div class="large-9 columns">
    <%= image_tag "beerance_mugicon.png" %><h2>Archived Specials</h2>
  </div>
  <div class="large-3 columns">
    <%= link_to "New Special", "#", data: {reveal_id: "new_special"}, title: "New Special", class: 'button' %>
  </div>
</div>

<% unless @inactive_specials.empty? %>
<div class="row">
    <div class="large-12 columns archives">
      <div class="row thead">
        <div class='large-2 columns'>
          <b>Name</b>
        </div>
        <div class='large-2 columns'>
          <b>Style</b>
        </div>
        <div class='large-1 columns'>
          <b>Price</b>
        </div>
        <div class='large-1 columns'>
          <b>Size</b>
        </div>
        <div class='large-4 columns'>
          <b>Location</b>
        </div>
        <div class='large-2 columns'>
          <b>Reactivate</b>
        </div>
      </div>
      <% @inactive_specials.each do |bs| %>
      <div class="row">
        <div class="large-2 columns">
          <%= bs.special_description %>
        </div>
        <div class="large-2 columns">
          IPA
        </div>
        <div class="large-1 columns">
          <%= number_to_currency(bs.sale_price) %>
        </div>
        <div class="large-1 columns">
           <%= "#{bs.beer_size}oz" %>
        </div>
        <div class="large-4 columns">
          <%= bs.bar_name %>          
        </div>
        <div class="large-2 columns">
          <%= link_to "Reactivate", reactivate_beerance_path(bs), class: 're-activate', data: {remote: true} %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% else %>
  <h2 style='text-align: center; width: 100%;margin-top: 20px;'>You have no archived specials</h2>
<% end %>